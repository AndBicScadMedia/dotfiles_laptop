###################### # - Conky settings - #
######################
update_interval 2
total_run_times 0
net_avg_samples 1
cpu_avg_samples 2

imlib_cache_size 0
double_buffer yes
no_buffers yes

format_human_readable

#####################
# - Text settings - #
#####################
use_xft yes
xftfont Droid Sans:size=8
override_utf8_locale yes
text_buffer_size 2048

#############################
# - Window specifications - #
#############################
own_window yes
own_window_type desktop
own_window_hints below,skip_taskbar,skip_pager

own_window_colour 000000
own_window_argb_visual yes
own_window_argb_value 200

alignment top_right
gap_y 35
gap_x 8
border_inner_margin 8

draw_outline no
draw_borders no

minimum_size 350 700
maximum_width 350
maximum_height 700

default_bar_size 250 10 
draw_graph_borders no
draw_bar_borders no

default_color DEDEDE
color1 1793D0
color2 8C8C8C
color3 ABABAB
color4 C9C9C9
color5 DEDEDE
color6 757575
color7 35BF5C
color8 575757

TEXT
${voffset 20}${color1}${goto 5}${font Droid Sans Mono:size=55}${time %H}${font Droid Sans Mono:size=25}${voffset -29}:${time %M}${font Droid Sans Mono:size=12}${voffset -12}${time %S}
${color2}${goto 100}${voffset 7}${font :size=8}${time %A}
${color3}${goto 100}${voffset 1}${font :size=8}${time %d %B %Y}
${color2}${voffset -80}${font}${font Droid Sans Mono:size=10}${execpi 3600 DJS=`date +%_d`; cal -m | sed '1d' | sed '/./ !d' | sed 's/$/ /' | fold -w 21 | sed -n '/^.\{21\}/p' | sed 's/^/${alignr} /' | sed /" $DJS "/s/" $DJS "/" "'${color1}'"$DJS"'${color2}'" "/}${font}
# NETWORK
${font xirod:Bold:size=11}${color7}NETWORK ${hr 2}$font

${font Droid Sans:Bold:size=9}${color7}NETWORK (GENERAL)${stippled_hr}$color$font
Active Interface ${alignr}$gw_iface
Public IP${alignr}${execi 3600 wget -O - http://ip.tupeux.com | tail}
Gateway IP ${alignr}$gw_ip
DNS ${alignr}$nameserver
TOR Status ${alignr}${if_running tor} Active${else}Disabled${endif}
Firewall ${alignr}${exec systemctl status ufw | grep active | cut -c 11-27}
Packets $alignr In:${tcp_portmon 1 32767 count}  Out: ${tcp_portmon 32768 61000 count}

${font Droid Sans:Bold:size=8}${alignc}${color7}NETWORK (WIRELESS) ${stippled_hr}$font$color
${font Droid Sans:Bold:size=8}wlp6s0 $font$alignr ${addr wlp6s0}$font
SSID${font Droid Sans:size=8}${alignr}${wireless_essid wlp6s0}${font}
Down: ${color red}${downspeed wlp6s0}/s ${color}(${totaldown wlp6s0})${alignr}Up: ${color green}${upspeed wlp6s0}/s $color(${totalup wlp6s0})
${downspeedgraph wlp6s0 50,170  000000 ff0000} ${alignr}${upspeedgraph wlp6s0 50,170 000000 00ff00}
$alignr${color6}Link quality:    ${color7}${wireless_link_bar 8,300 wlp6s0}$color

